<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="client_buy" author="SazhinEA" context="store">

        <createSequence sequenceName="hibernate_sequence" startValue="1" incrementBy="1"/>

        <createTable tableName="client">

            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="cart_id" type="bigint">
                <constraints foreignKeyName="client_cart_fk"
                             referencedTableName="cart"
                             referencedColumnNames="id"/>
            </column>

            <column name="account_id" type="bigint">
                <constraints foreignKeyName="client_account_fk"
                             referencedTableName="account"
                             referencedColumnNames="id"/>
            </column>

        </createTable>

        <createTable tableName="buy">

            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>

            <column name="client_id" type="bigint">
                <constraints foreignKeyName="buy_client_fk"
                             referencedTableName="client"
                             referencedColumnNames="id"/>
            </column>

        </createTable>

        <sql>
            insert into buy values (1002), (1003);
            insert into client values (5, 'Egor', 'zachem@gmail.com', 100, 2),
                                      (6, 'Sacha', 'ctoeto@yandex.ru', 101, 1);

        </sql>

    </changeSet>

</databaseChangeLog>